<div class="container">
    <h2>Welcome</h2>
    <div class="row">
        <div class="col-md-6 border">
            <h3>Resgister</h3>
            <form action="/users" method="post">
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <p><label for="name">Name:</label> <input type="text" name="user[name]"></p>
            <p><label for="alias">Alias:</label> <input type="text" name="user[alias]"></p>
            <p><label for="email">Email:</label> <input type="email" name="user[email]"></p>
            <p><label for="password">Password:</label> <input type="password" name="user[password]"></p>
            <p><label for="password_confirmation">Password Confirmation:</label> <input type="password" name="user[password_confirmation]"></p>
            <input type="submit" value="Register" class="btn btn-primary">
        </form>
    </div>
    <div class="col-md-6 border">
        <h3>Login</h3>
        <form action="/sessions" method="post">
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <p><label for="email">Email:</label> <input type="email" name="email"></p>
            <p><label for="password">Password</label> <input type="password" name="password"></p>
            <input type="submit" value="Login" class="btn btn-primary">
            
            </form>
        </div>
    </div>
</div>